#include <iostream>
using namespace std;
int getTotalSteps() {
 int totalsteps=0;
int dailysteps=0;
for(int i=1;i<8;i++){
    cout<<"enter the daily steps for day :"<<endl;
    cin>>dailysteps;
cout<<i+1;
totalsteps+=dailysteps;
}
cout<<"average:"<<totalsteps/7<<endl;
cout<<"total steps:"<<totalsteps<<endl;
return 0;
}

int main() {
    getTotalSteps();
    return 0;
}
